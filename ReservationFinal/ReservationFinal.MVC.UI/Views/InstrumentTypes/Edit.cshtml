@model ReservationFinal.DATA.EF.InstrumentType

@{
    ViewBag.Title = "Edit " + Model.InstrumentTypeName;
}
<div class="container">
    <h2 class="viewHeader">@ViewBag.Title</h2>

    @using (Html.BeginForm("Edit", "InstrumentTypes", FormMethod.Post, new { @class = "bg-dark text-white p-2 rounded-3" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 class="subHeader">Instrument Type</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.InstrumentTypeID)

            <div class="form-group">
                @Html.LabelFor(model => model.InstrumentTypeName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.InstrumentTypeName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InstrumentTypeName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div> 
        <div>
            @Html.ActionLink("Back to List", "Index",  null, new { @class = "text-white" })
        </div>
    }


</div>
