@using Microsoft.AspNet.Identity;
@model IEnumerable<ReservationFinal.DATA.EF.Reservation>

@{
    ViewBag.Title = "Reservations";
    var currentUser = User.Identity.GetUserId();
}

<div class="container">
    <h2 class="viewHeader">@ViewBag.Title</h2>

    <div id="MessageContent"></div>

    <p>
        @*@Html.ActionLink("Create New", "Create")*@
        <button id="toggleReservationCreate" class="btn btn-primary">Create New</button>
        @*@Html.ActionLink("To Instruments", "Index", "OwnerInstruments", null, new { @class = "btn btn-dark"} )*@
    </p>

    @* Create a placeholder for the Partial View to render *@
    <div id="ReservationCreate">
        @Html.Partial("ReservationCreate", new ReservationFinal.DATA.EF.Reservation())
    </div>

    <div class="table-responsive-md">
        <table class="table table-striped reservationsTable" id="dataTable">
            <thead class="bg-dark text-white">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ReservationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location.LocationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OwnerInstrument.InstrumentName)
                    </th>
                    <th>
                        Notes:
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="Reservation-@item.ReservationID">
                        <td>
                            @Html.DisplayFor(modelItem => item.ReservationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.LocationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OwnerInstrument.InstrumentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OwnerInstrument.SpecialNotes)
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ReservationID }, new { @class = "btn btn-sm btn-dark" })
                            @Html.ActionLink("Details", "Details", new { id = item.ReservationID }, new { @class = "btn btn-sm btn-dark" })
                            @if (item.ReservationDate - DateTime.Now.Date <= TimeSpan.FromDays(7) && (User.IsInRole("Customer") || User.IsInRole("Employee")) && item.OwnerInstrument.OwnerID == currentUser)
                            {
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.ReservationID }, new { @class = "btn btn-sm btn-dark", disabled = "true" })*@
                                <button class="btn btn-sm text-white deleteDisabled" title="You are unable to delete reservations within a week of the Reservation Date. Contact an admin if you really want to delete this reservation." data-toggle="tooltip" data-placement="top">Delete</button>
                            }
                            else if (User.IsInRole("Admin") || item.OwnerInstrument.OwnerID == currentUser)
                            {
                                @Html.ActionLink("Delete", "Delete", new { id = item.ReservationID }, new { @class = "btn btn-sm btn-dark" })
                            }

                            @if (User.IsInRole("Employee"))
                            {
                                @Html.ActionLink("Edit Notes", "Edit", "OwnerInstruments", new { id = item.OwnerInstrumentID }, new { @class = "btn btn-sm btn-dark", id = "editButton" })
                            }
                            else if (User.IsInRole("Admin"))
                            {
                                @Html.ActionLink("Edit Instrument", "Edit", "OwnerInstruments", new { id = item.OwnerInstrumentID }, new { @class = "btn btn-sm btn-dark", id = "editButton" })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

