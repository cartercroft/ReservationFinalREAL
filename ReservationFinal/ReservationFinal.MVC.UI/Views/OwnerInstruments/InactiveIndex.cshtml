@model IEnumerable<ReservationFinal.DATA.EF.OwnerInstrument>

@{
    ViewBag.Title = "Inactive Instruments";
}

<h2 class="viewHeader">@ViewBag.Title</h2>

<div class="container">
    <p>
        @Html.ActionLink("Active Instruments", "Index", null, new { @class = "btn btn-md btn-dark" })
    </p>
    <div class="table-responsive-md">
        <table class="table table-striped" id="dataTable">
            <thead class="bg-dark text-white">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.InstrumentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InstrumentPhoto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SpecialNotes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateAdded)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InstrumentType.InstrumentTypeName)
                    </th>
                    <th>
                        Owner
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstrumentName)
                        </td>
                        <td class="text-center">
                            <img class="rounded-3" src="~/Content/instImages/t_@item.InstrumentPhoto" alt="@item.InstrumentName" title="@item.InstrumentName" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpecialNotes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateAdded)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstrumentType.InstrumentTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserDetail.FirstName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.OwnerInstrumentID }, new { @class = "btn btn-sm btn-dark mr-1" })
                            @Html.ActionLink("Details", "Details", new { id = item.OwnerInstrumentID }, new { @class = "btn btn-sm btn-dark mr-1" })
                            @Html.ActionLink("Reactivate", "Delete", new { id = item.OwnerInstrumentID }, new { @class = "btn btn-sm btn-success" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/DataTables.js")
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                responsive: true,
                "language": {
                    "emptyTable": "You haven't added an instrument yet!"
                },
                columnDefs: [
                    { orderable: false, targets: [1, 3] }
                ]
            });
        });
    </script>
}